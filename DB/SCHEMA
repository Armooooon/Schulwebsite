CREATE DATABASE Pestalozzi;

USE Pestalozzi;

CREATE SCHEMA IF NOT EXISTS SchulWebsite;

CREATE DATABASE if not exists Pestalozzi;

USE Pestalozzi;

CREATE TABLE aktuelles (
  id int NOT NULL,
  image varchar(255) NOT NULL,
  title varchar(255) NOT NULL,
  beschreibung varchar(255) NOT NULL
);

CREATE table essensplan (
id int not null,
essensplan varchar(255) not null,
essenplan2 varchar(255) not null
);

Create table konferenz(
id int not null,
konferenzDatum date not null
);

Create table schueler(
id int not null,
schuelerAnzahl int not null
);

